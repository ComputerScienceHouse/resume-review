extends layout

block head
  script(src='https://kit.fontawesome.com/8da32cc80b.js')

block content
  .container
    .row
      .col.col-lg-8.offset-lg-2
        ul.list-group
          if !resumes.length
            h2.text-center No resumes found. 
              a(href="/upload/") Click here 
              | to upload one!
          each resume in resumes
              a.list-group-item.list-group-item-action(href='/resumes/view/user/' + resume.author)
                img(src='https://profiles.csh.rit.edu/image/' + resume.author, class='profile')
                b #{resume.author}
                span.badges
                  span.badge.badge-primary.badge-pill.float-right #{moment(resume.date + ' +0000').fromNow()}
                  span.badge.badge-info.badge-pill.float-right
                    | #{resume.comment_count} 
                    i(class='fas fa-comments')
                  if resume.resume_count > 1
                    span.badge.badge-dark.badge-pill.float-right
                      | #{resume.resume_count} 
                      i(class='fas fa-file')
